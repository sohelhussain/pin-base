<% include ./partials/header.ejs %>
<div class="screen w-full min-h-screen bg-zinc-800 px-10 py-8">
    <div class="cards flex flex-wrap gap-10">
        <% user.posts.forEach(elem => { %>
            <div class="card w-32">
                <div class="w-full h-40 bg-sky-200 overflow-hidden rounded-lg">
                    <img class="w-full h-full object-cover" src="/images/uploads/<%= elem.image %>" alt="">
                </div>
                <h5 class="text-white capitalize"><%= elem.title %></h5>
            </div>
       <% }) %>
    </div>
</div>
<% include ./partials/footer.ejs %>
