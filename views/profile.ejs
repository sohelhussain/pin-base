<% include ./partials/header.ejs %>
    <div class="profile w-full min-h-screen bg-zinc-800 text-white py-1">
        <form class="formupload hidden" action="/fileupload" method="post" enctype="multipart/form-data">
            <input type="file" name="image">
        </form>
        <div class="prodet flex flex-col items-center py-2 mt-20">
            <div class="relative ">
                <span class="upicone absolute w-8 h-8 rounded-full right-0 bottom-0 cursor-pointer bg-zinc-400 flex items-center justify-center">
                    <i class="ri-pencil-line"></i>
                </span>
                <div class="proimg w-32 h-32 bg-white rounded-full overflow-hidden">
                    <img src="/images/uploads/<%= user.profileImage%>" alt="">
                </div>
            </div>
            <h1 class="text-3xl font-semibold mt-5 capitalize"><%= user.name %></h1>
            <h3>@<%= user.username %></h3>
            <a href="/edit" class="bg-zinc-700 px-7 py-2 rounded-full text-sm font-semibold mt-5">Edit</a>
            <a href="/add" class="capitalize bg-red-600 px-7 py-2 rounded-full mt-5">add new post</a>
        </div>
        <div class="cards flex flex-wrap gap-10 py-10 px-28">
            <div class="card-box">
                <div class="card-img w-56 h-40 flex items-center justify-center bg-white rounded-2xl overflow-hidden">
                    <img class="w-full h-full object-cover object-center" src="/images/uploads/<%= user?.posts[0]?.image %>" alt="">
                </div>
                <a href="/show/posts" class="font-semibold mt-3 inline-block text-xl capitalize">Your uploded pins</a>
                <h5 class="text-sm font-medium opacity-60"><%= user.posts.length %> pins</h5>
            </div>
        </div>
    </div>
    <script>
        const $ = elem => document.querySelector(elem)
        $(".upicone").onclick = e => {
            $(".formupload input").click();
        }
        $(".formupload input").onchange = e => {
            $(".formupload").submit();
        }
    </script>
<% include ./partials/footer.ejs %>
